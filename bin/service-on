#!/bin/sh
BIN_DIR="$(dirname "$0")"
PAK_DIR="$(dirname "$BIN_DIR")"
PAK_NAME="$(basename "$PAK_DIR")"
PAK_NAME="${PAK_NAME%.*}"
[ -f "$USERDATA_PATH/$PAK_NAME/debug" ] && set -x

echo "$0" "$@"
cd "$PAK_DIR" || exit 1

architecture=arm
if uname -m | grep -q '64'; then
    architecture=arm64
fi

export PATH="$PAK_DIR/bin/$architecture:$PAK_DIR/bin/$PLATFORM:$PAK_DIR/bin:$PATH"

main() {
    cd "$SDCARD_PATH" || return 1

    cat <<'EOF' >"$USERDATA_PATH/$PAK_NAME/ftpserver.json"
{
    "version": 1,
    "passive_transfer_port_range": {
        "start": 2122,
        "end": 2130
    },
    "accesses": [
        {
            "user": "minui",
            "pass": "minui",
            "fs": "os",
            "params": {
                "basePath": "$SDCARD_PATH"
            }
        }
    ]
}
EOF

    ftpserver -conf "$USERDATA_PATH/$PAK_NAME/ftpserver.json" >"$LOGS_PATH/$PAK_NAME.service.txt" 2>&1 &
}

main "$@"
